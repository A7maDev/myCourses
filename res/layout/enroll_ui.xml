<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="@dimen/main_layout_all_padding"
            android:orientation="vertical">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <!-- Polytechnic Enrollment (Header) -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/enrollui_header_uni"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/course_title_top_margine"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:gravity="center"
                android:background="@android:color/darker_gray"/>

        <!-- Enrollment Year -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/student_title_top_margine"
                android:layout_marginBottom="@dimen/student_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/enrollui_title_year"/>

        <TextView
                android:id="@+id/enrollui_uniYearTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Enrollment Date -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/enrollui_title_date"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/enroll_title_top_margine"
                android:layout_marginBottom="@dimen/enroll_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/enrollui_uniDateTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Enrollment Requirements -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/enrollui_title_requirements"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/enroll_title_top_margine"
                android:layout_marginBottom="@dimen/enroll_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/enrollui_uniRequireTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Small"/>

        <View style="@style/Divider"/>

        <!-- Course Enrollment (Header) -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/enrollui_header_courses"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/course_title_top_margine"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:gravity="center"
                android:background="@android:color/darker_gray"/>

        <!-- Course Enrollment Year -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/enroll_title_top_margine"
                android:layout_marginBottom="@dimen/enroll_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/enrollui_title_year"/>

        <TextView
                android:id="@+id/enrollui_courseYearTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Course Enrollment Date -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/enrollui_title_date"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/enroll_title_top_margine"
                android:layout_marginBottom="@dimen/enroll_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/enrollui_courseDateTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>
    </LinearLayout>
</ScrollView>