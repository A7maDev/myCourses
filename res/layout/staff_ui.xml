<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="@dimen/main_layout_all_padding"
            android:orientation="vertical">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <!-- Staff Name -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/staffui_title_staffname"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/staff_title_top_margine"
                android:layout_marginBottom="@dimen/staff_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/staffui_nameTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Staff Email -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/staffui_title_staffemail"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/staff_title_top_margine"
                android:layout_marginBottom="@dimen/staff_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/staffui_emailTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Staff Office -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/staffui_title_staffoffice"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/staff_title_top_margine"
                android:layout_marginBottom="@dimen/staff_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/staffui_officeTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Staff Phone -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/staffui_title_staffphone"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/staff_title_top_margine"
                android:layout_marginBottom="@dimen/staff_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/staffui_phoneTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Staff Programme -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/staffui_title_staffprog"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/staff_title_top_margine"
                android:layout_marginBottom="@dimen/staff_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/staffui_progTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

    </LinearLayout>
</ScrollView>