<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="@dimen/main_layout_all_padding"
            android:orientation="vertical">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <!-- Course Code -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/coursedetailsui_title_code"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/course_title_top_margine"
                android:layout_marginBottom="@dimen/course_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/coursedetailsui_codeTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Course Name -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/course_title_top_margine"
                android:layout_marginBottom="@dimen/student_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/coursedetailsui_title_name"/>

        <TextView
                android:id="@+id/coursedetailsui_nameTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Crouse Credit -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/coursedetailsui_title_credit"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/course_title_top_margine"
                android:layout_marginBottom="@dimen/course_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/coursedetailsui_creditTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Crouse Level -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/coursedetailsui_title_level"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/course_title_top_margine"
                android:layout_marginBottom="@dimen/course_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/coursedetailsui_levelTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Programme -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/coursedetailsui_title_programme"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/course_title_top_margine"
                android:layout_marginBottom="@dimen/course_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/coursedetailsui_progTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- CLASS -->

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/coursedetailsui_header_class"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/course_title_top_margine"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:gravity="center"
                android:background="@android:color/darker_gray"/>

        <View style="@style/Divider"/>

        <!-- Class CRN -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/coursedetailsui_title_crn"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/course_title_top_margine"
                android:layout_marginBottom="@dimen/course_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/coursedetailsui_crnTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Class Tutor -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/coursedetailsui_title_tutor"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/course_title_top_margine"
                android:layout_marginBottom="@dimen/course_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/coursedetailsui_tutorTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

    </LinearLayout>
</ScrollView>