<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="@dimen/main_layout_all_padding"
            android:orientation="vertical">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Student ID -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:visibility="visible"
                android:layout_marginTop="@dimen/student_title_top_margine"
                android:layout_marginBottom="@dimen/student_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="@string/studentui_title_studentid"
                style="@android:style/TextAppearance.Medium" android:singleLine="false"
                android:textStyle="bold"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/studentui_studentIDEditText"
                android:layout_gravity="left|center_vertical"
                android:typeface="sans"
                android:visibility="visible"
                android:textStyle="normal"
                android:enabled="true"
                android:clickable="false"
                android:editable="false"
                android:singleLine="true"
                />

        <!-- Student Name -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/studentui_title_studentname"
                android:textColor="#000000"
                android:typeface="sans"
                android:visibility="visible"
                android:layout_marginTop="@dimen/student_title_top_margine"
                android:layout_marginBottom="@dimen/student_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium" android:textStyle="bold"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/studentui_studentNameEditText"
                android:layout_gravity="left|center_vertical"
                android:typeface="sans"
                android:visibility="visible"
                android:textStyle="normal"
                android:enabled="true"
                android:clickable="false"
                android:editable="false" android:singleLine="true"
                android:focusableInTouchMode="false" android:focusable="false"/>

        <!-- Student Email -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/studentui_title_studentemail"
                android:textColor="#000000"
                android:typeface="sans"
                android:visibility="visible"
                android:layout_marginTop="@dimen/student_title_top_margine"
                android:layout_marginBottom="@dimen/student_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium" android:textStyle="bold"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/studentui_studentEmailEditText"
                android:layout_gravity="left|center_vertical"
                android:typeface="sans"
                android:visibility="visible"
                android:textStyle="normal"
                android:enabled="true"
                android:clickable="false"
                android:editable="false"
                android:singleLine="true" android:focusable="false" android:focusableInTouchMode="false"/>

        <!-- Student Mentor -->

        <TextView
                android:id="@+id/studentui_title4TextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/studentui_title_studentmentor"
                android:textColor="#000000"
                android:typeface="sans"
                android:visibility="visible"
                android:layout_marginTop="@dimen/student_title_top_margine"
                android:layout_marginBottom="@dimen/student_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium" android:textStyle="bold"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_gravity="center" android:orientation="horizontal">
            <EditText
                    android:layout_width="@dimen/ui_editview_withaction_width"
                    android:layout_height="fill_parent"
                    android:id="@+id/studentui_studentMentorEditText"
                    android:typeface="sans"
                    android:visibility="visible"
                    android:textStyle="normal"
                    android:enabled="true"
                    android:clickable="false"
                    android:editable="false" android:singleLine="true"
                    android:linksClickable="false" android:inputType="none" android:focusable="false"
                    android:focusableInTouchMode="false"/>
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/studentui_mentorAction" android:src="@drawable/ic_action_info_black"
                    android:visibility="visible" android:adjustViewBounds="true" android:baselineAlignBottom="false"
                    android:clickable="true" android:scaleType="center" android:cropToPadding="false"
                    android:layout_gravity="center"
                    android:contentDescription="@string/studentui_mentorActionContentDescr"/>
        </LinearLayout>

        <!-- Student Programme -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/studentui_title_studentprog"
                android:textColor="#000000"
                android:typeface="sans"
                android:visibility="visible"
                android:layout_marginTop="@dimen/student_title_top_margine"
                android:layout_marginBottom="@dimen/student_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium" android:textStyle="bold"
                />

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_gravity="center" android:orientation="horizontal">
            <EditText
                    android:layout_width="@dimen/ui_editview_withaction_width"
                    android:layout_height="fill_parent"
                    android:id="@+id/studentui_studentProgrammeEditText"
                    android:layout_gravity="left|center_vertical"
                    android:typeface="sans"
                    android:visibility="visible"
                    android:textStyle="normal"
                    android:enabled="true"
                    android:singleLine="true"
                    android:linksClickable="false" android:clickable="false" android:focusable="false"
                    android:focusableInTouchMode="false" android:editable="false"/>
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/studentui_progAction" android:src="@drawable/ic_action_more_black"
                    android:visibility="visible" android:adjustViewBounds="true" android:baselineAlignBottom="false"
                    android:clickable="true" android:scaleType="center" android:cropToPadding="false"
                    android:layout_gravity="center"
                    android:contentDescription="@string/studentui_progActionContentDescr"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>