<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="@dimen/main_layout_all_padding"
            android:orientation="vertical">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <!-- Assessment Name -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/assessmentsui_title_name"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/assessments_title_top_margine"
                android:layout_marginBottom="@dimen/assessments_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/assessmentsui_nameTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Assessment Weight -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/assessments_title_top_margine"
                android:layout_marginBottom="@dimen/assessments_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="@string/assessmentsui_title_weight"/>

        <TextView
                android:id="@+id/assessmentsui_weightTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Assessment Due -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/assessmentsui_title_due"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/assessments_title_top_margine"
                android:layout_marginBottom="@dimen/assessments_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/assessmentsui_dueTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>

        <!-- Assessment Grade -->
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/assessmentsui_title_grade"
                android:textColor="#000000"
                android:typeface="sans"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginTop="@dimen/assessments_title_top_margine"
                android:layout_marginBottom="@dimen/assessments_title_bottom_margine"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <TextView
                android:id="@+id/assessmentsui_gradeTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:typeface="sans"
                android:visibility="visible"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

        <View style="@style/Divider"/>
    </LinearLayout>
</ScrollView>